<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" > <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".SettingsActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuración de la Impresión"
            android:textSize="24sp" android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logo del lugar"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/imageViewLogo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:background="#E0E0E0" android:scaleType="centerInside" android:layout_marginBottom="8dp"
                android:src="@android:drawable/ic_menu_gallery"/> <Button
                android:id="@+id/buttonSelectLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar Logo"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Texto de Encabezado:" android:textSize="18sp" android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/editTextHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej: Nombre de la empresa, dirección..." android:inputType="textMultiLine"
                android:lines="3"
                android:maxLines="5"
                android:gravity="top"
                android:layout_marginBottom="8dp"/> </LinearLayout>

        <Switch
            android:id="@+id/switchDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Incluir Fecha y Hora en el Ticket" android:textSize="18sp" android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Texto de Pie de Página:" android:textSize="18sp" android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/editTextFooter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej: Agradecimiento, política de devoluciones..." android:inputType="textMultiLine"
                android:lines="3"
                android:maxLines="5"
                android:gravity="top"
                android:layout_marginBottom="8dp"/> </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"> <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imagen de código QR:" android:textSize="18sp" android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/imageViewQr"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:background="#E0E0E0" android:scaleType="centerInside" android:layout_marginBottom="8dp"
                android:src="@android:drawable/ic_menu_camera"/> <Button
                android:id="@+id/buttonSelectQr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar QR"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ancho del Papel del Ticket:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/radioGroupPaperWidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radio58mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="58 mm"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/radio80mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80 mm"
                android:textSize="16sp"/>

        </RadioGroup>
        <Button
            android:id="@+id/buttonSaveSettings"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Guardar Configuración"
            android:layout_gravity="end"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
