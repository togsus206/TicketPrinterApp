<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ticketRootLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white"> <ImageView
        android:id="@+id/ticketLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:adjustViewBounds="true"
        android:maxHeight="64dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/ticketHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:text=""
        android:textColor="@android:color/black"/> <TextView
        android:id="@+id/ticketDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:text=""
        android:textColor="@android:color/black"/> <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

    <LinearLayout
        android:id="@+id/ticketItemsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">
        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/ticketTotalLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TOTAL"
        android:textSize="15sp"
        android:gravity="end"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"/> <TextView
        android:id="@+id/ticketTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="end"
        android:text="$0.00"
        android:textStyle="bold"
        android:textColor="@android:color/black"/> <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/ticketFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:text=""
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"/> <ImageView
        android:id="@+id/ticketQrCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:adjustViewBounds="true"
        android:layout_marginTop="8dp"/>
        
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"  android:background="@drawable/dotted_line"
        android:layout_marginTop="10mm" android:layout_marginBottom="8dp" />

</LinearLayout>
